    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paisSelect = document.getElementById('pais');
            const departamentoSelect = document.getElementById('departamento');
            const nacionalServicios = document.querySelectorAll('.nacional');
            const internacionalServicios = document.querySelectorAll('.internacional');

            paisSelect.addEventListener('change', function() {
                if (paisSelect.value === 'Bolivia') {
                    departamentoSelect.style.display = 'block';
                    // Mostrar solo servicios nacionales
                    nacionalServicios.forEach(option => option.style.display = 'block');
                    internacionalServicios.forEach(option => option.style.display = 'none');
                } else {
                    departamentoSelect.style.display = 'none';
                    // Mostrar solo servicios internacionales
                    nacionalServicios.forEach(option => option.style.display = 'none');
                    internacionalServicios.forEach(option => option.style.display = 'block');
                }
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calcularBtn = document.querySelector('.botons');
            calcularBtn.addEventListener('click', function (e) {
                e.preventDefault();
    
                const servicio = document.getElementById('servicio').value;
                const peso = document.getElementById('peso').value;
    
                if (!servicio || !peso) {
                    alert('Por favor, complete todos los campos.');
                    return;
                }
    
                fetch('/calcular', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                    },
                    body: JSON.stringify({ servicio, peso })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Mostrar resultados
                        alert('Resultados: ' + JSON.stringify(data.data));
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Hubo un error al calcular.');
                });
            });
        });
    </script>
    
